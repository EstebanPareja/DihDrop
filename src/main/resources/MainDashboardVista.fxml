<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.dihdrop.Controller.MainDashboardController">
    <children>
        <Label fx:id="welcomeLabel" layoutX="26.0" layoutY="38.0" text="Bienvenido, [Nombre del Usuario]">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <Button fx:id="crearEnvioButton" layoutX="509.0" layoutY="78.0" onAction="#handleCrearEnvio" prefHeight="40.0" prefWidth="165.0" style="-fx-font-size: 16px; -fx-base: #4CAF50;" text="Crear Nuevo Envío" textFill="WHITE">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>

        <Label layoutX="26.0" layoutY="140.0" text="Mis Envíos Recientes">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <TableView fx:id="enviosTableView" layoutX="26.0" layoutY="175.0" prefHeight="295.0" prefWidth="648.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="120.0" text="ID Envío" />
                <TableColumn fx:id="destinoColumn" prefWidth="250.0" text="Destino" />
                <TableColumn fx:id="estadoColumn" prefWidth="150.0" text="Estado" />
                <TableColumn fx:id="fechaColumn" prefWidth="125.0" text="Fecha" />
            </columns>
        </TableView>

        <MenuBar layoutY="2.0" prefWidth="700.0">
            <menus>
                <Menu mnemonicParsing="false" text="Cuenta">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleGestionarPerfil" text="Gestionar Perfil" />
                        <MenuItem mnemonicParsing="false" onAction="#handleCerrarSesion" text="Cerrar Sesión" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>

    </children>
</AnchorPane>