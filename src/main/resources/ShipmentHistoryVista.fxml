<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.dihdrop.Controller.ShipmentHistoryController">
    <children>
        <Label layoutX="25.0" layoutY="25.0" text="Historial de Envíos">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <!-- Panel de Filtros -->
        <HBox alignment="CENTER_LEFT" layoutX="25.0" layoutY="75.0" prefWidth="750.0" spacing="10.0">
            <children>
                <Label text="Desde:" />
                <DatePicker fx:id="dateFromPicker" />
                <Label text="Hasta:" />
                <DatePicker fx:id="dateToPicker" />
                <Label text="Estado:" />
                <ComboBox fx:id="statusFilterCombo" prefWidth="150.0" promptText="Todos" />
                <Button fx:id="filterButton" onAction="#handleFiltrar" text="Filtrar" />
                <Button fx:id="clearFilterButton" onAction="#handleLimpiarFiltros" text="Limpiar" />
            </children>
        </HBox>

        <!-- Tabla de Envíos -->
        <TableView fx:id="historyTableView" layoutX="25.0" layoutY="125.0" prefHeight="400.0" prefWidth="750.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="100.0" text="ID Envío" />
                <TableColumn fx:id="fechaColumn" prefWidth="150.0" text="Fecha de Creación" />
                <TableColumn fx:id="origenColumn" prefWidth="150.0" text="Origen" />
                <TableColumn fx:id="destinoColumn" prefWidth="150.0" text="Destino" />
                <TableColumn fx:id="costoColumn" prefWidth="100.0" text="Costo Total" />
                <TableColumn fx:id="estadoColumn" prefWidth="100.0" text="Estado" />
            </columns>
        </TableView>

        <!-- Panel de Acciones -->
        <HBox alignment="CENTER_RIGHT" layoutX="25.0" layoutY="540.0" prefWidth="750.0" spacing="15.0">
            <children>
                <Button fx:id="detailsButton" disable="true" onAction="#handleVerDetalles" prefHeight="30.0" text="Ver Detalles" />
                <Button fx:id="downloadButton" onAction="#handleDescargarReporte" prefHeight="30.0" style="-fx-base: #2196F3;" text="Descargar Reporte (CSV)" textFill="WHITE" />
            </children>
        </HBox>
    </children>
</AnchorPane>